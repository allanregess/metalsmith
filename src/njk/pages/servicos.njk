{% extends "layouts/default.njk" %}

{% set borderCam = false %}

{% block content %}
	<div class="services">
		<div class="hero-services">
			<div class="hero-img-bg">
				<img src="{{ root(hero.imagePath) }}" alt="" />
				<div class="container">
						<h1>{{ hero.title | safe }}</h1>
						<p>{{ hero.description | safe }}</p>
				</div>
			</div>
		</div>

		 <div class="workshops-container container">

			<div class="text-box">
				<h2>{{ workshops.title | safe }}</h2>
				<div class="description">{{ workshops.description | safe }}</div>
			</div>

			<div class="content">
				{% for item in workshops.data %}
					<div class="course-box">
						<div class="background">
							<div class="blur-image" style="background-image: url('{{ root(item.image) }}')">'</div>
						</div>
						<div class="content-wrapper">
							<div class="image" style="background-image: url('{{ root(item.image) }}')"></div>
							<img src="{{item.icon}}" class="icon" />
							<h5>{{ item.title | safe }}</h5>
							<a class="arrow-btn" href="{{ root(item.href) }}" title="">{{ item.label }}</a>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>

		 <div class="consultancy-container gray-bg">
			<div class="container">
				<div class="text-box">
