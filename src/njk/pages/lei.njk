{% extends "layouts/default.njk" %}

{% block content %}
	<div class="law">
		<div class="hero-law">
			<div class="hero-img-bg">
				<img src="{{ root(hero.imagePath) }}" alt="" />
				<div class="container">
						<h1>{{ hero.title | safe }}</h1>
						<a class="download-btn" href="{{ hero.pdf }}" title="">{{hero.buttonLabel}}</a>
				</div>
			</div>
			<div class="container">
				<div class="hero-content">{{ hero.content | safe }}</div>
			</div>
		</div>

		<div class="topics-law">
			<div class="container">
				{% for item in topics %}
					<div class="topic">
						<img class="icon" src="{{root(item.icon)}}" />
						<div class="content">
							<h3 class="title">{{ item.title | safe }}</h3>
							<p class="description">{{ item.description | safe }}</p>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>

		<div class="reasons-law">
			<div class="lines-bg">
				<img src="{{root(reasons.lines)}}" />
			</div>

			<div class="container">
				<div class="content-box">
					<div class="container">
						<img class="icon" src="{{root(reasons.importance.icon)}}" />
						<h3 class="title">{{ reasons.importance.title | safe }}</h3>
						<p class="description">{{ reasons.importance.description | safe }}</p>
					</div>
				</div>
			</div>

				<div class="content">
						<h3 class="title">{{ reasons.explanation.title | safe }}</h3>
						<p class="description">{{ reasons.explanation.description | safe }}</p>
						<ul class="list">
							{% for item in reasons.explanation.list %}
								<li class="list-item">{{ item }}</li>
							{% endfor %}
						</ul>
				</div>
		</div>

		<div class="resume">
			<div class="container">
				<div class="content-box">
					<div class="container">
						<img class="icon" src="{{root(reasons.importance.icon)}}" />
						<h3 class="title">{{ resume.title | safe }}</h3>
						<p class="description">{{ resume.description | safe }}</p>
					</div>
					<ul class="list">
						{% for item in resume.list %}
							<li class="list-item">
								<span class="index">{{ item.index | safe}}</span>
								{{ item.content | safe}}
							</li>
						{% endfor %}
					</ul>
					<a class="download-btn" href="{{ hero.pdf }}" title="">fazer download</a>
				</div>
			</div>
		</div>

	</div>

	{% include "partials/cam.njk" %}
{% endblock %}

{% block js %}

{% endblock %}
