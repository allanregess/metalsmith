			max-width none

			span
				font-family(lato, black)
				font-size 24px
				text-transform uppercase

.crime-info
	background-color $white

	.container
		&:first-child
			border-bottom 2px solid $light-gray
			padding-bottom 100px

			+desktop()
				border 2px solid $light-gray
				border-top none
				padding-bottom 150px

	.box
		box-sizing border-box
		background url('/assets/bio/waves-texture.jpg') center / cover
		display flex
		margin -90px auto 100px
		position relative
		max-width 800px
		padding 50px 30px
		z-index 1

		+desktop()
			margin -280px auto 150px
			padding 75px 150px

		p
			line-height 1.7

			+desktop()
				font-size 18px
				line-height 2

	.container.container-bio
		p
			margin 0 0 $gutter

.justice
	background-color $white
	padding-bottom 60px

	+desktop()
		padding-bottom 110px

	h2
		font-family(lato, black)
		background-color $primary-color
		box-sizing border-box
		color $white
		font-size 40px
		margin -43px auto $gutter * 2
		max-width 470px
		padding 20px 30px
		text-align center
		text-transform uppercase

	.container.container-bio
		.vertical-info
			position relative
			left 0
			top 0
			transform none

			+desktop()
				position absolute
				left 0
				top 50%
				transform translate(-60%, -50%) rotate(-90deg)

			+wide()
				transform translate(-65%, -50%) rotate(-90deg)

		h3
			color $primary-color

.newspapper
	background linear-gradient($white 50%, $light-gray 50%)
	margin-bottom $gutter
	padding-bottom 40px
	position relative
	text-align center

	&:before
		background-color $primary-color
		top -40px
		content ''
		height 50px
		left 50%
		position absolute
		transform translateX(-50%)
		width 1px

	img
		max-width 660px
		width 100%

.justice-complement
	component-spacing()
	position relative

	+desktop()
		padding-top 0

	.container.container-bio p
		max-width none

.justice-box
	background linear-gradient($light-gray 60%, $white 40%)

	p
		background-color $secondary-color
		box-sizing border-box
		color $white
		line-height 2
		margin 0 auto
		max-width 520px
		padding 50px 30px

		+tablet()
			font-size 18px
			padding 60px 80px

.cidh
	component-spacing()
	bio-spacer(after)
	background-color $white
	position relative

	&:before
		background-color $tertiary-color
		content ''
		height 70px
		left 50%
		position absolute
		top 35px
		transform translateX(-50%)
		width 2px

		+tablet()
			height 95px

		+desktop()
			height 120px

	h2
		margin 0 auto
		max-width 830px
		text-align center
		text-transform uppercase

		span
			font-family(lato)
			background-color $tertiary-color
			box-shadow 30px 0 0 $tertiary-color, -30px 0 0 $tertiary-color
			color $black
			font-size 18px
			line-height 2.4
			padding 9px 0

			+tablet()
				font-size 24px
				line-height 2.3

	.recomendations
		display flex
		flex-flow column
		justify-content space-between
		margin 0 auto
		max-width 720px

		+desktop()
			max-width 1140px
			flex-flow row wrap

		> div
			flex 1 auto
			margin-top 50px

			&:last-child
				margin-top $gutter

			+desktop()
				flex 1 33.333%
				margin-top 100px
				max-width 300px
				padding-right $gutter

				&:last-child
					border 1px solid $light-gray
					box-shadow 5px -5px 20px 0px alpha($black, 0.05), 0 5px 20px 0px alpha($black, 0.05)
					column-count 2
					column-gap ($gutter / 2)
					margin-top 100px
					max-width 800px
					padding $gutter * 2

					p
						margin-top 0

				&:nth-child(3n)
					padding-right 0

			+wide()
				&:last-child
					column-gap $gutter

			span
				font-family(lato, black)
				align-items center
				background-color $light-gray
				border-radius 100%
				box-sizing border-box
				color $tertiary-color
				display flex
				height 90px
				font-size 40px
				justify-content center
				margin-bottom 50px
				width 90px

			p
				line-height 2

