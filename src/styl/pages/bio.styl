.after-law
	component-spacing()

	h2
		font-family(lato, black)
		background-color $primary-color
		box-sizing border-box
		color $white
		font-size 40px
		margin 0 auto $gutter * 2
		max-width 380px
		padding 10px 20px
		text-align center
		text-transform uppercase

