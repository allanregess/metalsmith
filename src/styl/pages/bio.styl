.vertical-info
	font-family(lato, black)
	color alpha($soft-gray, 0.1)
	display inline-block
	font-size 50px
	left 50%
	padding-top 15px
	position absolute
	text-align center
	top 35px
	transform translate(-50%, 0)
	width 100%

	&:before
		background-color $soft-gray
		content ''
		height 40px
		left 50%
		position absolute
		top -35px
		transform translateX(-50%)
		width 2px

	+desktop()
		font-size 75px
		left 0
		top 50%
		transform translate(-60%, -50%) rotate(-90deg)

	+wide()
		transform translate(-65%, -50%) rotate(-90deg)

.hero-bio
	arrow-bottom()
	min-height 500px
	position relative
	overflow hidden

	&:before
		bottom 130px

	+tablet()
		height calc(100vh - 69px)

	+desktop()
		height calc(100vh - 89px)

	img
		height 100%
		position absolute
		right -250px
		top 0

		+tablet()
			transform translateX(-360px)

		+desktop()
			left 50%
			transform translateX(-50%)

	.title-wrapper
		padding 30px
		position relative
		z-index 2

		+tablet()
			display flex
			flex-flow column
			align-items flex-end
			padding 100px $gutter

		+wide()
			padding 100px $gutter * 2

		h1
			font-family(lato, black)
			color $secondary-color
			font-size 30px
			line-height 1.8
			margin 0
			text-indent -20px
			text-transform uppercase

			+tablet()
				font-size 60px
				line-height 1.5

			span
				background-color $secondary-color
				box-shadow 20px 0 0 $secondary-color, -20px 0 0 $secondary-color
				color $white
				padding 7px 0 5px

		p
			font-family(roboto, bold)
			background-color $white
			box-shadow 20px 0 0 $white, -20px 0 0 $white
			color $secondary-color
			display inline-block
			line-height 1.5
			margin 15px 20px 0 0
			padding 7px 0 5px
			text-transform uppercase

			+tablet()
				font-size 18px

.timeline-birthday
	background-color $secondary-color
	position relative
	z-index 3

	.container
		display flex

	.box
		background-color $white
		box-shadow 5px -5px 20px 0px alpha($black, 0.05)
		box-sizing border-box
		display flex
		flex-flow column
		margin -99px auto 0
		max-width 1140px
		padding 85px 30px 100px
		position relative
		width 100%

		+desktop()
			padding 85px 75px
			flex-flow row

	span
		font-family(lato, black)
		color $soft-gray
		display inline-block
		font-size 50px
		left 50%
		padding-top 15px
		position absolute
		text-align center
		top 35px
		transform translate(-50%, 0)

		+desktop()
			font-size 75px
			left 0
			top 50%
			transform translate(0, -50%) rotate(-90deg)

		&:before
			background-color $soft-gray
			content ''
			height 40px
			left 50%
			position absolute
			top -35px
			transform translateX(-50%)
			width 2px

	p
		font-size 18px
		line-height 2
		margin 30px auto 0
		max-width 685px

		&:first-letter
			font-family(lato, black)
			color $secondary-color
			font-size 75px
			line-height 1

.life-resume
	component-spacing()
	bio-spacer()
	background-color $secondary-color
	color $white
	position relative

	span
		font-family(lato, black)
		color alpha($tertiary-color, 0.1)
		font-size 70px
		left 50%
		position absolute
		bottom 60px
		text-transform uppercase
		transform translate(-50%, -250%) rotate(-90deg)
		z-index 1

		+desktop()
			font-size 100px

	.container
		.container-header
			flex 1 100%

			p
				margin 0

		h3
			color $tertiary-color

.begin
	component-spacing()
	background-color $white
	position relative

	h2
		font-family(lato, black)
		color $secondary-color
		font-size 30px
		margin $gutter 0 $gutter
		text-align center
		text-decoration underline
		text-transform uppercase

		+tablet()
			font-size 40px
			margin 0 0 $gutter

	.container.container-bio
		div
			&:last-child
					align-items center

			+desktop()
				max-width 350px

				&:last-child
					margin-left $gutter

		img
			width 100%
			max-width 472px

			+desktop()
				left 0
				position absolute
				top $gutter
				width auto

.begin-cycle
	component-spacing()
	bio-spacer()
	background url('/assets/bio/bg-begin.jpg') top center no-repeat

	.container
		p,
		h3
			margin-top 0

		h3,
		a
			color $secondary-color

.crime
	component-spacing()
	background-color $secondary-color
	color $white
	position relative

	+desktop()
		padding-bottom 350px

	h2
		font-family(lato, black)
		font-size 30px
		margin $gutter 0
		text-align center
		text-decoration underline
		text-transform uppercase

		+tablet()
			font-size 40px
			margin 0 0 $gutter

	.container.container-bio
