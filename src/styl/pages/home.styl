.hero-home
	arrow-bottom()
	position relative
	width: 100%

	+desktop()
		imgCover()
		height calc(100vh - 89px)
		min-height 600px

	img
		display block
		margin -25% 0 0
		width 100%

		+desktop()
			margin 0 auto
			width calc((100vh - 89px)*2)

	.container
		padding $gutter
		position relative
		text-align center
		z-index: 2

		+tablet()
			padding $gutter * 2

		+desktop()
			display flex
			flex-flow column
			height 100%
			justify-content center

		.title
			font-family(roboto)
			font-size 16px
			line-height 1.5
			margin 0 auto
			max-width 75%

			+desktop()
				font-size 18px

			b
				font-family(lato, black)
				color $primary-color
				font-size 24px
				line-height 1.4
				margin 0 auto
				text-transform uppercase

				+tablet()
					font-size 35px
					max-width 600px

				+desktop()
					font-size 60px
					max-width 710px

		a
			btn()
			margin $gutter 0

			+desktop()
				margin $gutter * 4 0

.profile-navigation
	display flex
	flex-flow column
	justify-content center

	+desktop()
		flex-flow row

	.profile-wrapper
		flex 1
		imgCover()

		img
			transition transform .3s ease-out

		&:hover
			.profile-content
				box-shadow inset -20px 20px 0px 0px $white, inset 20px -20px 0px 0px $white

			img
				transform translate(-50%, -50%) scale(1.05)

	.profile-content
		box-sizing border-box
		display flex
		flex-flow column
		height 100%
		justify-content space-between
		min-height 540px
		padding $gutter
		position relative

		+tablet()
			min-height 600px
			padding $gutter * 2 $gutter * 2 $gutter

		+desktop()
			padding-right $gutter

		+wide()
			min-height 700px

		h2
			font-family(lato, black)
			color $white
			font-size 30px
			line-height 1.5
			margin 0
			text-transform uppercase

			+tablet()
				font-size 40px

		a
			btn()
			margin 10px 0

			+tablet()
				margin 15px 0

.section-our-projects
	component-spacing()

	.about
		padding-bottom $gutter
		text-align center

		h2
			font-family(lato, black)
			color $primary-color
			font-size 30px
			line-height 1.5
			margin 0
			text-transform uppercase
			text-decoration underline

		p
			line-height 1.7
			margin-top $gutter

		+desktop()
			flex-flow row

			h2
				font-size 40px

			p
				font-size 18px
				margin-left 170px
				margin-top 0

	.projects-home
		display flex
		flex-wrap wrap
		justify-content space-between

		> div
			margin $gutter 0 0
			max-width 335px
			padding 0 ($gutter / 2) 45px 0
			position relative

			h3
				font-family(lato, black)
				color $dark-secondary
				font-size 22px
				margin $gutter 0 0
				text-transform uppercase

			p
				line-height 2
				margin $gutter 0

				u
					font-size smaller
					text-decoration none
					vertical-align super

			a
				bottom 0
				position absolute

		+desktop()
			flex-wrap nowrap

.section-contribute
	component-spacing()
	background-color $secondary-color

	.container
		display flex
		flex-wrap wrap
		justify-content center

		+desktop()
			flex-wrap nowrap

		> div
			box-sizing border-box
			margin 0 0 $gutter 0
			width 100%

			+tablet()
				max-width 410px

				&:last-child
					max-width none

			+desktop()
				flex 1 33.333%
				margin 0 $gutter 0 0

				&:last-child
					max-width 410px
					margin-right 0

			h5
				font-family(lato, black)
				color $white
				font-size 30px
				line-height 1.4
				margin 0
				max-width 335px
				text-decoration underline
				text-transform uppercase

				+desktop()
					font-size 40px

			.description
				color $white
				font-size 16px
				line-height 1.5
				margin 60px 0
				max-width 330px

				+tablet()
					font-size 18px

			.highlight-text
				margin-left 20px
				max-width 325px

				span
					font-family(roboto, bold)
					background-color $white
					box-shadow 20px 0 0 $white, -20px 0 0 $white
					color $secondary-color
					font-size 18px
					line-height 2.2
					padding 7px 0 5px

			&.bank-transfer,
			&.card-paypal
				background-color $white
				background-position center 50px
				background-repeat no-repeat
				padding 150px 30px 30px
				text-align center

				+desktop()
					padding 180px 50px 50px

				p
					font-family(lato, black)
					color $secondary-color
					font-size 22px
					line-height 1.4
					text-align center
					text-transform uppercase

				.account-info li
					font-size 16px
					line-height 2
					margin 0
					text-align left

					+desktop()
						font-size 18px

				.payments-logos
					align-items center
					display flex
					flex-wrap wrap
					justify-content center
					margin $gutter 0 ($gutter * 2)

					+tablet()
						flex-wrap nowrap

					+desktop()
						flex-wrap wrap

					li
						flex 1 1 50%
						margin ($gutter / 2) 0

				a
					btn(type:primary)

			&.bank-transfer
				background-image url('/assets/icons/icon-bank-transfer.png')

			&.card-paypal
				background-image url('/assets/icons/icon-card-paypal.png')

