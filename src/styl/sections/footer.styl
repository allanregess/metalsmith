footer
	background $secondary-color
	padding 100px 0

	.container
		text-align center

		.social-share
			border-bottom 1px solid alpha($white, 0.3)
			display flex
			flex-flow column
			padding-bottom $gutter

			+desktop()
				align-items center
				flex-flow row

			p
				font-family(roboto, bold)
				color $white
				margin 0
				text-align left
				text-transform uppercase

			ul
				display flex
				font-size 0
				margin-top $gutter

				+desktop()
					margin-top 0
					margin-left $gutter

				li
					margin-right 35px

				a
					display block
					transition opacity .1s ease-in

					.fb-icon
						height 28px
						width 13px

					.it-icon
						height 28px
						width 28px

					.yt-icon
						height 26px
						width 37px

					&:hover
						opacity .6

	.content
		display flex
		flex-flow column
		justify-content space-around
		padding 0 $gutter
		text-align left

		+desktop()
			justify-content flex-start
			flex-flow row wrap
			padding 0

		+wide()
			justify-content space-around

		.links-list
			color $white
			flex-grow 1
			margin-top $gutter

			+desktop()
				margin-top $gutter * 2
				margin-right $gutter
				max-width 150px

				&:last-child
					margin-right 0

			&.single
				li:first-child:after
					display none

			&.active
				li
					display block

					&:first-child:after
						top 7px
						transform rotate(-135deg)

			li
				display none
				line-height 1.5
				margin 15px 0

				+desktop()
						display block

				&:first-child a
					font-family(roboto, bold)
					font-size 16px

				&:first-child
					font-family(roboto, bold)
					font-size 16px
					display block
					margin 0
					min-height 50px
					position relative
					text-transform uppercase

					&:after
						border-bottom 2px solid $white
						border-right 2px solid $white
						content ''
						height 10px
						right 5px
						left auto
						position absolute
						transform rotate(45deg)
						transition transform .2s ease-in
						width 10px

						+desktop()
							display none

			a
				font-family(roboto)
				color $white
				font-size 16px
				text-decoration none

				&:hover
					text-decoration underline

	.logo-imp
		margin-top 85px

	h6
		font-family(roboto)
		font-size 16px
		color $white
		margin-top $gutter
		margin-bottom 0
